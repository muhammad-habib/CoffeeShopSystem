<%= form_for :user, url: users_path do |f| %>

    <p>
      <%= f.label :UserName %><br>
      <%= f.text_field :username %>
    </p>

    <p>
      <%= f.label :Email %><br>
      <%= f.email_field :email %>
    </p>

    <p>
      <%= f.label :password %><br>
      <%= f.password_field :password %>
    </p>

    <p>
      <%= f.label :Admin %><br>
      <%= f.check_box :admin %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>