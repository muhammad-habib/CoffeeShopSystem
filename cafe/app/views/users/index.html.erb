<h1>Users</h1>

<%= link_to 'Add New User', new_user_path, class: 'ui green button' %>

<table  class="ui single line table">
  <tr>
    <th>UserName</th>
    <th>Email</th>
    <th>Is Admin</th>
    <th>Options</th>
  </tr>
  <% @users.each do |user| %>

      <tr>
        <td> <%= user.username %> </td>
        <td> <%= user.email %> </td>
        <td> <%= user.admin %> </td>
        <td> <%= link_to 'Edit', edit_user_path(user), class: 'ui blue button' %>
             <%= link_to 'Delete', user_path(user), class: 'ui red button', method: :delete, data: {confirm: 'Are you sure?'} %> </td>
      </tr>
  <% end %>
</table>
