<div class="ui  grid">
  <div class="eight wide column">
<div class="ui container">
<h1>Editing User
  <i class="user icon"></i>
</h1>
  <%= form_for :user,html:{:class=>"ui form"}, url: user_path(@user), method: :patch do |f| %>
      <div class="field">
        <%= f.label :UserName, class: "ui label",style:"float: left;" %><br>
        <%= f.text_field :username %>
      </div>

      <div class="field">
        <%= f.label :Email, class: "ui label",style:"float: left;" %><br>
        <%= f.email_field :email %>
      </div>

      <div class="field">
        <%= f.label :password, class: "ui label",style:"float: left;" %><br>
        <%= f.password_field :password %>
      </div>

      <div class="field">
        <%= f.label :room, class: "ui label",style:"float: left;" %><br>
        <%= f.number_field :room %>
      </div>

      <div class="field">
        <%= f.label :image, class: "ui label",style:"float: left;" %><br>
        <%= f.file_field :image %>
      </div>

      <div class="ui checkbox field">

        <%= f.check_box :admin %>
        <%= f.label :Admin, class: "ui label"%><br>
      </div>

      <div>
        <%= f.submit "Save", :class => 'ui green button' %>
        <%= link_to 'Back', users_path , class: 'ui black button' %>
      </div>

  <% end %>


</div>
  </div>
</div>