<!DOCTYPE html>
<html>
<head>
  <title>Cafe</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/semantic-ui/2.2.10/semantic.min.css">
  <script src="https://cdn.jsdelivr.net/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/semantic-ui/2.2.10/semantic.min.js"></script>
  <%= action_cable_meta_tag %>
</head>

<body>

<div class="ui inverted menu">
  <% if current_user.try(:admin)  %>
      <%= link_to 'Orders', orders_path, class: 'item' %>
      <%= link_to 'Products', products_path, class: 'item' %>
      <%= link_to 'Categories', categories_path, class: 'item' %>
      <%= link_to 'Users', users_path, class: 'item' %>
      <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'item right' %>
  <% elsif current_user&.admin == FALSE %>
      <%= link_to 'My Orders', myorders_path, method: :get, class: 'item' %>
      <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'item right' %>
<% end %>
</div>

<%= yield %>
</body>
</html>
